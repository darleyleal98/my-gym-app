<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TreinoMainActivity">

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/button_bak_dicas"
        app:layout_constraintEnd_toStartOf="@id/text_name_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_name_app"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="44dp"
        android:fontFamily="@font/cabin"
        android:padding="8dp"
        android:text="@string/my_gym"
        android:textColor="@color/brown_800"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_back"
        app:layout_constraintStart_toStartOf="@id/image_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phrase_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:text="TREINOS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name_app"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/linear_habits1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phrase_habit">

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/linear_habits1"
        android:paddingVertical="20dp"
        tools:ignore="NotSibling">

        <LinearLayout
            android:id="@+id/linear_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phrase_habit">

            <TextView
                android:id="@+id/exercicio_Task_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/cabin"
                android:paddingStart="16dp"
                android:text="Item 1"
                android:layout_weight="1"
                android:textColor="@color/brown_800"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_habits1" />

            <ImageView
                android:id="@+id/edit_Task_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/edit_3_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/edit_Task_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/delete_Task_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/delete_3_svgrepo_com"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_item_1">

            <TextView
                android:id="@+id/exercicio_Task_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/cabin"
                android:paddingStart="16dp"
                android:text="Item 1"
                android:layout_weight="1"
                android:textColor="@color/brown_800"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_habits1" />

            <ImageView
                android:id="@+id/edit_Task_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/edit_3_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/edit_Task_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/delete_Task_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/delete_3_svgrepo_com"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_item_2">

            <TextView
                android:id="@+id/exercicio_Task_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/cabin"
                android:paddingStart="16dp"
                android:text="Item 1"
                android:layout_weight="1"
                android:textColor="@color/brown_800"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_item_2" />

            <ImageView
                android:id="@+id/edit_Task_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/edit_3_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/edit_Task_2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/delete_Task_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/delete_3_svgrepo_com"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_item_3">

            <TextView
                android:id="@+id/exercicio_Task_4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/cabin"
                android:paddingStart="16dp"
                android:text="Item 1"
                android:layout_weight="1"
                android:textColor="@color/brown_800"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_item_3" />

            <ImageView
                android:id="@+id/edit_Task_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/edit_3_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/edit_Task_3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/delete_Task_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/delete_3_svgrepo_com"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>